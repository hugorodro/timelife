name: GitHub Actions Demo
on: [push]
jobs:
  Build and Deploy UI:
    runs-on: ubuntu-latest
    permissions:
      id-token: write
      contents: read
    steps:
    - name: Checkout
      uses: actions/checkout@v2
      
    - name: Configure AWS credentials 
      uses: aws-actions/configure-aws-credentials@v1
      with:
        role-to-assume: arn:aws:iam::404161153281:role/timelife-github
        aws-region: us-east-1
        
    - name Build and Deploy UI
      uses: subosito/flutter-action@v2
      run: |
        cd flutterapp
        flutter --version
        flutter pub get
        flutter build web
        aws s3 cp . s3://timelife.dev --recursive
        aws s3 cp . s3://www.timelife.dev --recursive
